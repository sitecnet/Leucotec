    <record id="view_leucotec_catalogo_form" model="ir.ui.view">
      <field name="name">view.leucotec.catalogo.form</field>
      <field name="model">leucotec.catalogo</field>
      <field name="arch" type="xml">
        <form string="Catalogo Form">
          <sheet>
          	<group>
              <field name="name"/>
              <field name="linea"
               options="{'no_create_edit': True},
                           {'no_quick_create'}"/>
                <field name="presentacion"/>
                <field name="proveedor"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

      <record id="view_leucotec_catalogo_tree" model="ir.ui.view">
